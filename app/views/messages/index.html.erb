<h1 class="title is-4">Message <%= @conversation.recipient.email %></h1>

<% if @over_ten %>
  <%= link_to "Show previous", '?m=all', class:'button is-link' %>
<% end %>

<section id="messages" class="mb4">
  <% @messages.each do |message| %>
    <% if message.body %>
      <% user = User.find(message.user_id) %>
      <article class="message is-dark">
        <div class="message-body">
          <div class="inline-block nudge-down-10 pr2"><%= gravatar_for user, size: 32 %></div>
          <div class="inline-block"><strong><%= user.email %></strong> <%= message.message_time %></div>
          <div class="block pt4">
            <div class="f4"><%= sanitize markdown_to_html(message.body) %></div>
          </div>
        </div>
      </article>
    <% end %>
  <% end %>
</section>

<%= form_for [@conversation, @message], html: { class: "form" } do |f| %>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", placeholder: "Inquire about a trade..." %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="text-right">
    <%= f.submit "Send message", class: "btn btn-primary btn-lg mt-3" %>
  </div>
<% end %>


