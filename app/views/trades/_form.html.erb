<%= simple_form_for(@trade, html: { class: "form" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <% if @trade.errors.any? %>
    <div class="alert alert-danger">
      <p><%= pluralize(@trade.errors.count, "error") %> prevented this trade from saving:</p>
      <ul>
        <% @trade.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :images, class: "form-label" %>
    <%= f.file_field :images, multiple: true, class: "form-control-file", direct_upload: true %>
  </div>

  <%= f.button :submit, class: 'btn btn-dark mt-3' %>
<% end %>
